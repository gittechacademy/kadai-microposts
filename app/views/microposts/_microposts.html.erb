<ul class="list-unstyled">
  <% microposts.each do |micropost| %>
    <li class="media mb-2">
      <img class="mr-4 rounded" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div class="row">
          <div class="mr-2">
            <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
          </div>
          <div>
            <p class="mb-1"><%= micropost.content %></p>
          </div>          
        </div>
        <div class="row">
          <div class="mr-1">
            <%= render 'favorites/favorites_button', micropost: micropost %>            
          </div>
          <div>
            <% if current_user == micropost.user %>
              <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger' %>
            <% end %>
          </div>        
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>